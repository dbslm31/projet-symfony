{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Votre Panier</h1>

    {% if panier is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <table>
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>
            </thead>
            <tbody>
            {% for orderItem in panier.orderItems %}
                <tr>
                    <td>{{ orderItem.produit.nom }}</td>
                    <td>{{ orderItem.produit.prix }} €</td>
                    <td>{{ orderItem.quantite }}</td>
                    <td>{{ orderItem.total }} €</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p>Total du panier : {{ panier.total }} €</p>


    {% endif %}
{% endblock %}
